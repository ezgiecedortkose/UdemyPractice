@model SaveCustomerViewModel
@{
    Layout = null;
}


<form asp-controller="Customer" asp-action="SaveCustomer">
    Id: <input asp-for="Customer.Id" />
    Name: <input asp-for="Customer.Name" />
    Lastname: <input asp-for="Customer.LastName" />
    City: <select asp-for="Customer.City" asp-items="Model.Cities"></select>
    <button type="submit">Submit</button>
</form>